{
  "name": "nixphp/framework",
  "description": "NixPHP - the ultra-light, functional PHP framework for fast microservices and APIs.",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Flo Knapp",
      "email": "office@florianknapp.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "NixPHP\\": "src/"
    },
    "files": [
      "src/functions.php",
      "src/view_helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Fixtures\\": "tests/Fixtures/app/"
    }
  },
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*",
    "ext-json": "*",
    "psr/log": "^3.0",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "psr/http-message": "^2.0",
    "psr/http-factory": "^1.1",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1",
    "phpunit/php-code-coverage": "^12.1"
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
